{
  "name": "task-management-tool",
  "version": "1.0.0",
  "description": "A minimal, fast-to-use task management tool for handling many small tasks in a fast-paced environment",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "task-management",
    "productivity",
    "web-app"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "date-fns-tz": "^3.2.0",
    "sqlite3": "^5.1.7"
  }
}
